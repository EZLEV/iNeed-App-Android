<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAuthorPictureAdapterComment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_account" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">


            <GridLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:columnCount="2"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtAuthorAdapterComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingAdapterComment"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:stepSize="1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    tools:ignore="RtlHardcoded" />

            </GridLayout>

            <TextView
                android:id="@+id/txtDateAdapterComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="00/22/2017"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtBodyAdapterComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="habsdfoybasodufboasuydbfoasybdfuybdfuyasbdoufbasouydbfasydfyoasbdfoybasoudyfbsauybdfysaubdf" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>